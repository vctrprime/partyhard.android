<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_cards">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/party_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/party_title"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/party_img"
            android:fontFamily="@font/original_surfer"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/vk_black"
            android:textSize="@dimen/vk_share_title_text_size" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/party_user_av"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/party_user_name"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/party_user_av"
            android:layout_toStartOf="@+id/party_user_av"
            android:gravity="center_vertical"
            android:paddingRight="6dp"
            android:text="TextView"
            android:textSize="@dimen/vk_share_send_text_size" />

        <TextView
            android:id="@+id/party_description"
            android:layout_width="206dp"
            android:layout_height="70dp"
            android:layout_below="@+id/party_user_av"
            android:layout_toEndOf="@+id/party_title"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="TextView" />

    </RelativeLayout>

</RelativeLayout>